<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="st_button_ok">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#673AB7</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:translationX">-5dp</item>
    </style>

    <style name="st_button_cancel">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#00FFFFFF</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColor">#673AB7</item>
        <item name="android:textSize">18sp</item>
        <item name="android:translationX">5dp</item>
    </style>

    <style name="st_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">#673AB7</item>
        <item name="android:textStyle">bold</item>
        <item name="android:translationY">-40dp</item>
    </style>
</resources>